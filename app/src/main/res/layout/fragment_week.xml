<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:id="@+id/btBackground"
     android:background="@color/calendarBackground">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/dateTextView"
      android:textAlignment="center"
      android:textColor="@color/colorPrimary"
      android:textSize="20sp"
      android:layout_centerInParent="true"
      android:paddingTop="10dp" />

  <ImageButton
      app:srcCompat="@drawable/nt_arrow"
      android:id="@+id/week_ntBtn"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:backgroundTint="@color/transparent"/>

  <ImageButton
      app:srcCompat="@drawable/pr_arrow"
      android:id="@+id/week_prBtn"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:backgroundTint="@color/transparent"
      android:layout_alignBottom="@+id/weekTitle" />
 </RelativeLayout>

 <View
     android:id="@+id/dividerView"
     android:layout_width="fill_parent"
     android:layout_height="1dp"
     android:background="@color/calendarBackground"
     android:layout_below="@+id/weekdayLayout"
     android:layout_marginTop="3dp" />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/textView1" />

 <ListView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/weekListView"
     android:layout_below="@+id/dividerView" />

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:id="@+id/weekdayLayout"
     android:layout_below="@+id/btBackground"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:id="@+id/dayLayout">

   <TextView
       android:text="Sun"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/sunTextView"
       android:layout_weight="1"
       android:textSize="15dp"
       android:textStyle="bold"
       android:textAlignment="center"/>

   <TextView
       android:text="Mon"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/monTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="15dp"
       android:textAlignment="center"/>

   <TextView
       android:text="Tue"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/tueTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="15dp"
       android:textAlignment="center"/>

   <TextView
       android:text="Wed"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/wedTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="15dp"
       android:textAlignment="center" />

   <TextView
       android:text="Thu"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/thuTextView5"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="15dp"
       android:textAlignment="center"/>

   <TextView
       android:text="Fri"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/friTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="15dp"
       android:textAlignment="center"/>

   <TextView
       android:text="Sat"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/satTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="15dp"
       android:textAlignment="center"/>
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:id="@+id/dateLayout"
      android:layout_below="@+id/dayLayout">

   <TextView
       android:layout_height="match_parent"
       android:id="@+id/sunDateTextView"
       android:layout_weight="1"
       android:textSize="18dp"
       android:textStyle="bold"
       android:textAlignment="center"
       android:layout_width="match_parent"
       android:textColor="@drawable/selector_color"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/monDateTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="18dp"
       android:textAlignment="center"
       android:textColor="@drawable/selector_color"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/tueDateTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="18dp"
       android:textAlignment="center"
       android:textColor="@drawable/selector_color"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/wedDateTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="18dp"
       android:textAlignment="center"
       android:textColor="@drawable/selector_color"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/thuDateTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="18dp"
       android:textAlignment="center"
       android:textColor="@drawable/selector_color"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/friDateTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="18dp"
       android:textAlignment="center"
       android:textColor="@drawable/selector_color"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/satDateTextView"
       android:layout_weight="1"
       android:textStyle="bold"
       android:textSize="18dp"
       android:textAlignment="center"
       android:textColor="@drawable/selector_color"/>
  </LinearLayout>

 </RelativeLayout>

</RelativeLayout>